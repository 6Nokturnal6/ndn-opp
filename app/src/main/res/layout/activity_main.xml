<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout

        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="0dp">

        <Switch android:id="@+id/nfdSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nfdSwitch"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <TextView android:id="@+id/uptimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uptime"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/uptime"
            app:layout_constraintBaseline_toBaselineOf="@+id/uptime"
            android:layout_marginStart="4dp"/>

        <TextView android:id="@+id/uptime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="end"
            android:text="@string/notAvailable"
            android:textColor="@color/white"
            android:textColorHint="@color/lightgray"
            app:layout_constraintLeft_toRightOf="@+id/uptimeTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nfdSwitch"/>

        <TextView android:id="@+id/uuidTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/umobileUuid"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/uptimeTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/uuid"
            android:layout_marginStart="4dp"/>

        <TextView android:id="@+id/uuid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:gravity="end"
            android:text="@string/notAvailable"
            android:textColor="@color/white"
            android:textColorHint="@color/lightgray"
            app:layout_constraintTop_toBottomOf="@+id/uptime"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/uuidTitle"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/uuid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>